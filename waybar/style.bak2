/* Waybar Style - Blueish Purple Monochrome Theme */
/* Save as ~/.config/waybar/style.css */
* {
    font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', monospace;
    font-size: 13px;
    font-weight: 600;
    border: none;
    border-radius: 0;
    min-height: 0;
    margin: 0;
    padding: 0;
}

window#waybar {
    background: transparent;
    border-radius: 18px;
}

/* Workspaces - GNOME 48 Style */
#workspaces {
background: #ffffff;
margin: 16px;
padding: 6px;
border-radius: 18px;
}

#workspaces button {
min-width: 18px;
min-height: 6px;
background: #4a5568;
border-radius: 50%;
margin: 3px;
padding: 0;
transition: all 0.3s ease;
}

#workspaces button.active {
background: #8b7cf8; /* bright blue-purple */
min-width: 48px;
min-height: 6px;
border-radius: 50px;
}

/* Keyframes must be perfectly formatted */
@keyframes urgent-blink {
    0% { opacity: 1; }
    50% { opacity: 1; }
    51% { opacity: 0.5; }
    100% { opacity: 0.5; }
}

@keyframes urgent-shake {
    0% { margin-left: 3px; margin-right: 3px; }
    25% { margin-left: 1px; margin-right: 5px; }
    75% { margin-left: 5px; margin-right: 1px; }
    100% { margin-left: 3px; margin-right: 3px; }
}

/* Window title */
#window {
color: #8b7cf8; /* light blue-purple text */
background: #ffffff;
border-radius: 18px;
padding: 6px 12px;
margin: 16px;
font-weight: 700;
}

/* Clock */
#clock {
color: #8b7cf8; /* light blue-purple text */
background: #ffffff;
border-radius: 18px;
padding: 4px 16px;
margin: 16px;
font-weight: 700;
font-size: 14px;
}

.modules-right {
    padding: 0 6px;
    margin-right: 6px;
}

/* Right modules */
#pulseaudio,
#bluetooth,
#network,
#battery,
#custom-power,
#custom-nightlight,
#tray {
background: #ffffff;
color: #8b7cf8; /* light blue-purple text */
border-radius: 18px;
padding: 6px 12px;
margin: 16px 3px;
transition: all 0.3s ease;
}

