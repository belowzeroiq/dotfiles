}

#tray > .passive {
-gtk-icon-effect: dim;
}

#tray > .needs-attention {
-gtk-icon-effect: highlight;
background-color: #6366f1;
}

/* Tooltips */
tooltip {
    background: #1a1b26; /* dark blue-purple base */
    color: #e2e8f0; /* light blue-purple text */
    border: 1px solid #4a5568; /* muted blue-purple border */
    border-radius: 8px;
    padding: 8px;
}
