{
    "layer": "top",
    "position": "top",
    "height": 6,
    "spacing": 0,
    "margin-top": 12,
    "margin-left": 6,
    "margin-right": 6,
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["tray", "custom/nightlight", "bluetooth", "pulseaudio", "custom/power"],

"hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
        "default": " ",
        "active": " ",
        "urgent": " "
    },
    "persistent-workspaces": {
        "*": 3
    }
},

    "hyprland/window": {
        "format": "{}",
        "max-length": 50,
        "separate-outputs": true
    },

    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%Y-%m-%d %H:%M:%S}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "custom/nightlight": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/nightlight.sh",
        "return-type": "json",
        "interval": 5,
        "on-click": "~/.config/waybar/scripts/toggle-nightlight.sh",
        "signal": 9
    },

    "bluetooth": {
        "format": "{icon}",
        "format-icons": {
            "enabled": "Û∞ÇØ",
            "disabled": "Û∞Ç≤",
            "connected": "Û∞Ç∞"
        },
        "tooltip-format": "{status}\n{num_connections} connected",
        "on-click": "blueman-manager",
        "on-click-right": "rfkill toggle bluetooth && pkill -RTMIN+8 waybar",
    },

    "cpu": {
        "format": "Û∞çõ {usage}%",
        "format-warning": "Û∞çõ‚ö†Ô∏è {usage}%",
        "format-critical": "Û∞çõüî• {usage}%",
        "interval": 5
    },
    "memory": {
        "format": "Û∞ÜΩ {percentage}%",
        "format-warning": "Û∞ÜΩ‚ö†Ô∏è {percentage}%",
        "format-critical": "Û∞ÜΩüî• {percentage}%",
        "interval": 5
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
        "format-plugged": "Û∞ÇÑ {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": ["Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "network": {
        "format-wifi": "Û∞§® {signalStrength}%",
        "format-ethernet": "Û∞àÄ Connected",
        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": "Û∞§≠ Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Û∞§®",
        "tooltip-format-ethernet": "{ifname} Û∞àÄ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Û∞ùü Muted",
        "format-icons": {
            "headphone": "Û∞ãã",         // Headphone icon
            "hands-free": "Û∞ãé",       // Hands-free headset
            "headset": "Û∞ãé",          // Headset icon
            "phone": "Û∞è≤",            // Phone icon
            "portable": "Û∞ìÉ",         // Portable speaker
            "car": "Û∞Ñõ",              // Car audio
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]  // Volume levels: low, medium, high
        },
        "on-click": "pavucontrol",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
